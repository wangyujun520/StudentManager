
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>新增学员</title>
    <link href="~/bootstrap/css/animate.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/jquery-3.2.1.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 class="page-header text-danger animated bounceInLeft">新增学员</h1>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <form action="/Student/AddStuInfo" method="post">
                    <div class="form-group">
                        <label>姓名</label>
                        <input type="text" name="StudentName" placeholder="姓名" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>性别</label>
                        <input type="text" name="Gender" placeholder="性别" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>生日</label>
                        <input type="text" name="Birthday" placeholder="生日" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>身份证号</label>
                        <input type="text" name="StudentIdNo" placeholder="身份证号" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>卡号</label>
                        <input type="text" name="CardNo" placeholder="卡号" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>电话号码</label>
                        <input type="text" name="PhoneNumber" placeholder="电话号码" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>地址</label>
                        <input type="text" name="StudentAddress" placeholder="地址" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>年级编号</label>
                        <input type="text" name="ClassId" placeholder="年级编号" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="添加" class="form-control btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
