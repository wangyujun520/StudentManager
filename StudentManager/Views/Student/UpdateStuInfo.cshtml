@{ 
    Layout = null;
}
@model Models.Students

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>修改学员</title>
    <link href="~/bootstrap/css/animate.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/jquery-3.2.1.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 class="page-header text-danger animated bounceInLeft">修改学员</h1>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form action="/Student/UpdateStuInfo" method="post">
                    <div class="form-group">
                        <label>姓名</label>
                        <input type="text" name="StudentName" value="@Model.StudentName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>性别</label>
                        <input type="text" name="Gender" value="@Model.Gender" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>出生日期</label>
                        <input type="text" name="Birthday" value="@Model.Birthday.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>身份证号</label>
                        <input type="text" name="StudentIdNo" value="@Model.StudentIdNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>卡号</label>
                        <input type="text" name="CardNo" value="@Model.CardNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>电话号码</label>
                        <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>地址</label>
                        <input type="text" name="StudentAddress" value="@Model.StudentAddress" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>年级编号</label>
                        <input type="text" name="ClassId" value="@Model.ClassId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="修改" class="btn btn-danger" />
                        <a href="~/Student/Index" class="btn btn-danger">返回</a>
                    </div>
                    <input type="hidden" name="StudentId" value="@Model.StudentId" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>
